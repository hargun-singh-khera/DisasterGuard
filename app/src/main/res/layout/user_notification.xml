<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardMaxElevation="10dp"
    app:cardCornerRadius="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Ticket no: update"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvResponse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeading"
            android:layout_marginTop="5dp"
            android:text="Dear User, The resolution of your request/query has been provided. Check under Track Requests section and give valuable feedback." />

        <TextView
            android:id="@+id/dateOfEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entry Date: 01-05-2024"
            android:layout_below="@+id/tvResponse"
            android:layout_marginTop="5dp"
            android:textColor="@color/cyan"
            android:textSize="16sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>

